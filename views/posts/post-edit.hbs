<h1>Edit your Post!</h1>

<div class="create-container">
  <form class="create-form" action="/posts/{{_id}}/edit" method="POST" enctype="multipart/form-data">
    <label>
      Title:
      <input type="text" name="title" value="{{title}}"
        placeholder="Something like: Guitar player looking for punk band!" required />
    </label>
    <label>
      Your name / name of your band
      <input type="text" name="name" value="{{name}}" required />
    </label>
    <label>
      Instrument you are looking for / You play
      <input type="text" name="instrument" value="{{instrument}}" placeholder="Guitar, Drums, etc." required />
    </label>
    <label for="genre">Change the Genre
      <select name="genre" id="genre" required value="{{genre}}">
          <option value="Rock">Rock</option>
          <option value="Pop">Pop</option>
          <option value="Classic">Classic</option>
          <option value="Punk">Punk</option>
          <option value="Metal">Metal</option>
          <option value="Alternative">Alternative</option>
          <option value="Electronic">Electronic</option>
          <option value="Hip Hop">Hip Hop</option>
          <option value="R'n'B">R'n'B</option>
          <option value="Folk">Folk</option>
      </select>
    </label>
      <label for="experience">Change your level of experience
        <select name="experience" id="experience" required>
          <option value="anyexp">Any experience</option>
          <option value="beginner">Beginner</option>
          <option value="intermediate">Intermediate</option>
          <option value="moderate">Moderate</option>
          <option value="advanced">Advanced</option>
          <option value="expert">Expert</option>
        </select>
      </label>
      <label>
        Describe what you are looking for :
        <textarea type="text" name="description" cols="30" rows="10" required>{{description}}</textarea>
      </label>
      <label>
        Your location:
        <input type="text" value="{{location}}" name="location" required />
      </label>
      <label for="file-upload" class="upload-field">
        Change Image
        <input id="file-upload" accept="image/png, image/jpeg" type="file" name="image" />
      </label>
      <input type="hidden" name="status" value="{{status}}">
      <button class="submit-btn" type="submit">Submit Changes</button>
  </form>
  <img class="create-image" src="/images/music file2-02.svg" alt="">
</div>